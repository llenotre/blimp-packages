#!/bin/bash

set -e

# TODO Add a feature in the package builder to unwrap the directories automatically
cd $(ls -1d make*)

# Patching to support Maestro
# TODO sed -i 's/^	gnu\* |/	gnu* | maestro* |/' config.sub

# Compiling
./configure --prefix=/usr \
	--without-guile \
	--host=$TARGET \
	--build=$HOST
make -j${JOBS}

# Installing
make DESTDIR=$SYSROOT install
