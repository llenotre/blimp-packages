#!/bin/bash

set -e

# TODO Add a feature in the package builder to unwrap the directories automatically
cd $(ls -1d musl*)

# Compiling
./configure \
	--target="$TARGET" \
	--prefix="/usr" \
	--enable-debug \
	--enable-optimize= \
	--enable-shared
make -j${JOBS}

# Installing
make DESTDIR=$SYSROOT install
